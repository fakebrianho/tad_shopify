
<!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>{{ 'Tad Fab' | escape }}</title>
      {{ 'style.css' | asset_url | stylesheet_tag }}
      {{ content_for_header }}
  </head>
  <body>
      {% comment %} {{ content_for_layout }} {% endcomment %}
      <main class='image_container'>
          <section class='top_navigation'>
              <p class='nav_logo'>TADFAB</p>
              <p class='nav_login'>ENTER USING PASSWORD</p>
          </section>
  
          <!-- Your existing HTML content for the loading page -->
          <section class='content'>
              <p class='content_comingSoon'>COMING SOON</p>
              <p class='content_signUp'>SIGN UP & BE THE FIRST TO KNOW.</p>
              <div class='content_subscribe'>
                  <form id="mainForm" action="/contact#contact_form" accept-charset='UTF-8' method="post" class='content_subscribe'>
                      <input type="hidden" name="form_type" value="customer">
                      <input type="hidden" name="utf8" value="✓">
                      <input type="email" value="" placeholder="ENTER YOUR EMAIL" name="contact[email]" id="mainInput" class="emailPassword" aria-label="Email Address">
                      <div class='content_arrow'>
                        <button type="submit" class='content_arrow sbutton'><span>&#8594;</span>    </button>
                      </div>
                  </form>
              </div>
          </section>
          {% section 'fullscreen-video' %}
          {% comment %} <div class='cover'></div>
          {% for i in (1..9) %}
          <div class='image_{{ i }} slide {% if forloop.first %}active{% endif %}'>
              <img src="{{ '/' | append: i | append: '.png' | asset_url }}" alt="">
          </div>
          {% endfor %} {% endcomment %}
          {% comment %} <footer class='bottom_navigation'>
              <div class='bottom_links'>
                  <!-- Static links or placeholders; update these as needed -->
                  <a href="#" class='footer_instagram'>INSTAGRAM</a>
                  <a href="#" class='footer_redbook'>RED BOOK</a>
                  <a href="#" class='footer_tmall'>TMALL</a>
              </div>
          </footer> {% endcomment %}
          {% section 'footer-navigation' %}
      </main>
      {{ 'index.js' | asset_url | script_tag }}
  </body>
  </html>
 
